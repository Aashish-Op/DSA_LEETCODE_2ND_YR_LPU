class Solution {
public:
    int threeSumClosest(vector<int>& nums, int target) {
        int n = nums.size();

        sort(begin(nums), end(nums));

        int Close = 100000;

        for(int i = 0 ; i<n-2 ; i++){
            int l = i+1 , r = n-1 ;
            int sum = nums[i] + nums[l] + nums[r];

            if(abs(target-sum)< abs(target - Close)){
                Close = sum ;
            }
            if(sum > target){
                r--;
            }else{
                l++;
            }
        }
        return Close ;
    }
};
